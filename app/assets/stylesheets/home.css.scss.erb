//= depend_on_asset "heapsheep.JPG"

$primary: #9CBCBF;
$secondary:#522F2F;
$tertiary: #E41D2A;

$text-color: $secondary;
$link-color: $secondary;

$navbar-margin-bottom: 0px;
$navbar-default-bg: #FFFFFF;
$navbar-default-link-color: #FFFFFF;
$breadcrumb-bg: #FFFFFF;

$btn-primary-bg: $primary;
$btn-primary-color: #FFFFFF;

$navbar-default-brand-color:$secondary;
$breadcrumb-color:$secondary;

@import "bootstrap";

.heap {
  color: $secondary;
}

.sheep {
  color: $tertiary;
}

.navbar-nav button,
.navbar-nav input {
  margin-top:7px;
  margin-right: 10px;
  padding-top: 7px;
  padding-bottom: 7px;
}

ul.unstyled > li {
  list-style-type: none;
}

.sidebar a {
  color: $tertiary;
}

.sidebar {
  margin-top: 30px;
}

.main-title {
  margin-top:0px;
}

body { padding-top: 50px; }
.container-fluid {padding-top: 40px;}

.anchor {
  margin-top: -80px;
  padding-top: 80px;
}

.breadcrumb {
  padding-top: 5px;
  padding-bottom: 5px;
  width: 100%;
  z-index: 1;
}

.logo {
  display: inline-block;
  background: url('<%= asset_path 'heapsheep.JPG' %>') no-repeat;
  background-size: 100%;
  width: 50px;
  height: 35px;
  margin-top: -10px;
}
