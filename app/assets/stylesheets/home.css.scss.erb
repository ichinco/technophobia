$primary: #9CBCBF;
$secondary:#522F2F;
$tertiary: #E41D2A;

$text-color: $secondary;
$link-color: $secondary;

$navbar-margin-bottom: 0px;
$navbar-default-bg: #FFFFFF;
$navbar-default-link-color: #FFFFFF;
$breadcrumb-bg: #FFFFFF;

$btn-primary-bg: $primary;
$btn-primary-color: #FFFFFF;

$navbar-default-brand-color:$secondary;
$breadcrumb-color:$secondary;

@import "bootstrap";

.heap {
  color: $secondary;
  vertical-align: top;
}

.sheep {
  color: $tertiary;
  vertical-align: top;
}

.navbar-nav button,
.navbar-nav input {
  margin-top:7px;
  margin-right: 10px;
  padding-top: 7px;
  padding-bottom: 7px;
}

ul.unstyled > li {
  list-style-type: none;
}

.sidebar a {
  color: $tertiary;
}

.sidebar {
  margin-top: 5px;
  padding-left: 20px;
  padding-right: 20px;
}

.sidebar-affix {
    height:100%;
}

.sidebar.unstyled {
    padding-left:0px;
}

.main-title {
  margin-top:0px;
}

body { padding-top: 50px; }
.container-fluid {padding-top: 40px;}

.anchor {
  margin-top: -80px;
  padding-top: 80px;
}

.breadcrumb {
  padding-top: 5px;
  padding-bottom: 5px;
  width: 100%;
  z-index: 1;
}

.logo {
  display: inline-block;
  background: url('<%= asset_path 'heapsheep.JPG' %>') no-repeat;
  background-size: 100%;
  width: 50px;
  height: 35px;
  margin-top: -10px;
}

div.tech .tech-link {
    font-size: 20px;
}

.form-container {
    width:80%;
    margin: 0px auto;
}

.tech .star-group {
    display: inline-block;
    margin-right: 10px;
}

@media(max-width:1000px){
   .affix.breadcrumb {
        position: static;
        width: auto;
        top: 0;
    }

   .sidebar-affix.well {
        display:none;
   }

   .form-container {
       width:100%;
   }
}
