<div class="container">
    <div class="row">
        <div class="span5 offset3">
            <%= form_for :search, url:tech_index_path,
                         html: {class: "form-inline"}, method: "GET" do |f| %>
                What
                <%= f.text_field :technology_type, :data =>
                        { :provide => 'typeahead',
                          :source => @type},
                                 placeholder: "framework"%>
                should I use
                <%= f.submit "?", :class=>"btn" %>
            <% end %>
        </div>
    </div>
</div>
