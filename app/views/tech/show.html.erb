<% content_for :search_form do %>
    <% form_for :search, url: tech_index_path,
                html: {class: "navbar-search"}, method: "GET" do |f| %>
        <%= f.text_field :tech, placeholder: "search", class:"search-query" %>
        <%= f.submit "search", :class=>"hide" %>
    <% end %>
<% end %>

<div class="container">
    <h1><%= @technology[:name] %></h1>
    <%= link_to "write review",
                new_technology_review_path(@technology),
                class: "btn" %>



    <h2>In General</h2>
    <ul class="unstyled">
        <% @technology.reviews.each do |review| %>
            <% unless review.general_comments.blank? %>
                <li><%= review.general_comments %>(<%= review.user.email %>)</li>
            <% end %>
        <% end %>
    </ul>

    <h2>What makes it unique?</h2>
    <ul class="unstyled">
        <% @technology.reviews.each do |review| %>
            <% unless review.what_makes_it_unique.blank? %>
                <li><%= review.what_makes_it_unique %>(<%= review.user.email %>)</li>
            <% end %>
        <% end %>
    </ul>

    <h2>What is it good at?</h2>
    <ul class="unstyled">
        <% @technology.reviews.each do |review| %>
            <% unless review.what_is_it_good_at.blank? %>
                <li><%= review.what_is_it_good_at %>(<%= review.user.email %>)</li>
            <% end %>
        <% end %>
    </ul>

    <h2>What is it bad at?</h2>
    <ul class="unstyled">
        <% @technology.reviews.each do |review| %>
            <% unless review.what_is_it_bad_at.blank? %>
                <li><%= review.what_is_it_bad_at %>(<%= review.user.email %>)</li>
            <% end %>
        <% end %>
    </ul>
</div>

