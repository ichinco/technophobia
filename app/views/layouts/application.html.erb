<!DOCTYPE html>
<html>
<head>
  <title><%= @title || "HeapSheep" %></title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="google-site-verification" content="eYkyMtzfkxwEjI5lOidCjbV_YbEAaVBAWuB1Tt_7uxE" />
  <meta name="google-site-verification" content="zvoPd3BrzzpPm_DmlDtv0EQs_oH8GErIRNSxs6ytQD8" />
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-48336010-2', 'heapsheep.com');
      ga('send', 'pageview');

    </script>

</head>
<body>

    <nav class="navbar navbar-fixed-top navbar-default" role="navigation">
        <div class="navbar-header">

            <a class="navbar-brand" href="/">
                <div class="logo"></div>
                <span class="heap">heap</span><span class="sheep">sheep</span>
            </a>
        </div>

        <div class="collapse navbar-collapse">

            <ul class="nav navbar-nav pull-right">
                <li>
                    <form class="form-inline" action="/search" role="search">
                        <input type="text" name="search_term" placeholder="search" class="search-query form-control" />
                        <button type="submit" class="hide"></button>
                    </form>
                </li>
                <% if user_signed_in? %>
                    <li><%= button_to 'Settings', edit_user_registration_path, :method => :get, class: "btn btn-primary btn-sm"%></li>
                    <li><%= button_to 'Sign out', destroy_user_session_path, :method => :delete, class: "btn btn-primary btn-sm" %></li>
                <% else %>
                    <li><%= button_to 'Sign in', new_user_session_path, :method => :get, class: "btn btn-primary btn-sm" %></li>
                    <li><%= button_to 'Sign up', new_user_registration_path, :method => :get, class: "btn btn-primary btn-sm" %></li>
                <% end %>
            </ul>
        </div>

    </nav>
    <% if alert %>
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= alert %>
        </div>
    <% end %>
    <% if notice %>
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= notice %>
        </div>
    <% end %>

<%= yield %>

</body>
</html>
